{
  "name": "talking-light",
  "version": "1.0.0",
  "private": true,
  "description": "A one-screen spiritual companion app",
  "workspaces": [
    "apps/*",
    "apps/web",
    "server/*"
  ],
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "ingest:init": "cd server/ingest && npm run ingest:init",
    "ingest:bootstrap": "cd server/ingest && npm run ingest:bootstrap",
    "ingest:embed": "cd server/ingest && npm run ingest:embed"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "three": "^0.181.2"
  }
}
